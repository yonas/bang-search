{
  "name": "!Bang Search",
  "description": "Create custom !bang searches",
  "author": "Yonas Yanfa",
  "homepage_url": "https://github.com/yonas/bang-search",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": ["storage", "tabs", "declarativeWebRequest", "*://*/*"],
  "background": {
    "scripts": ["lib/jquery-2.1.3.min.js", "namespace.js", "background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon" : "icon.png",
    "default_title": "!Bang Settings",
    "default_popup": "settings.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
